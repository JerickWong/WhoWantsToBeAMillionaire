<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:onClick="startGame"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who wants to be a"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MILLIONAIRE?"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="-25dp"/>

    <LinearLayout
        android:layout_marginTop="85dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/elementbackground"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="startGame">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Play"
            android:lineSpacingExtra="60dp"
            android:id="@+id/textNewGame"
            android:textStyle="bold"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:background="@drawable/elementbackground"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="help">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Help"
            android:lineSpacingExtra="60dp"
            android:id="@+id/textHelp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:background="@drawable/elementbackground"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Options"
            android:lineSpacingExtra="60dp"
            android:id="@+id/textOptions"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Version 0.0.1" />
</LinearLayout>