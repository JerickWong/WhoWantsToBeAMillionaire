<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gamebg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/millionaire" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/usernameTextView"
        android:background="@drawable/buttonpasif"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/passwordTextView"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0.3"
        android:inputType="textPassword"
        android:background="@drawable/girisbutton"
        android:gravity="center"
        android:textColor="@drawable/girisbuttontextcolor" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0.3"
        android:background="@drawable/girisbutton"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@drawable/girisbuttontextcolor"
        android:onClick="login"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or register"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="normal"
        android:layout_marginTop="15dp"/>
    <Button

        android:id="@+id/registerBtn"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_weight="0.3"
        android:background="@drawable/girisbutton"
        android:gravity="center"
        android:text="register"
        android:textColor="@drawable/girisbuttontextcolor"
        android:onClick="register"/>

</LinearLayout>